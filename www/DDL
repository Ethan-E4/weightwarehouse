DROP TABLE IF EXISTS inventory;

CREATE TABLE inventory (
    item_id INT PRIMARY KEY,
    quantity INT NOT NULL,
    FOREIGN KEY (item_id) REFERENCES items(item_id)
        ON DELETE CASCADE
        ON UPDATE CASCADE
);
